Vagrant.configure("2") do |config|
  # General configuration
  config.vm.box = "generic/ubuntu2010"
  #config.vm.synced_folder ".", "/vagrant", disabled: true
  config.ssh.insert_key = false
  # Config VM provider
  config.vm.provider "virtualbox" do |vb|
     vb.memory = 512
     vb.linked_clone = true
     vb.cpus = 1
  end
  
  #Config servers
  
  #srv1
  config.vm.define "srv1" do |srv1|
    srv1.vm.hostname = "srv1"
    srv1.vm.network "private_network", ip: "192.168.56.101"
  end
  #srv2
  config.vm.define "srv2" do |srv2|
    srv2.vm.hostname = "srv2"
    srv2.vm.network "private_network", ip: "192.168.56.102"
  end

   #db1
  config.vm.define "db1" do |db1|
    db1.vm.hostname = "db1"
    db1.vm.network "private_network", ip: "192.168.56.103"
    db1.vm.provider "virtualbox" do |db1|
      db1.memory = 1024
    end
  end

    #VM provision

 config.vm.provision "ansible" do |ansible|
   ansible.limit = "all"
   ansible.playbook = "base_provision.yaml"
   
   ansible.groups = {
    srv: ['srv1', 'srv2'],
    db: ['db1']
   }
  end
  
end
